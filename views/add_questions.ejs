<%- include("header") -%>

<div class="row">
    <div class="col-lg-3 col-sm-1">
        <p> </p>
    </div>
    <div class="col-lg-6 col-sm-10 text-center  mcm-form">

        <h1 class="page-title">Add a Question</h1>

        <form action="/add_questions" method="post">
            <div class="form-group">
                <div class="form-group">
                    <label for="">Subject</label>
                </div>
                <div class="form-group text-left form-row">
                    <div class="col-4">
                        <select class="form-control" name="subjectDropdown">
                            <% subjects.forEach(function(subject){ %>
                            <option><%= subject %></option>
                            <%})%>
                        </select>
                    </div>
                    <div class="col-8 text-right">
                        <input type="text" name="subject" value="" placeholder="New Subject" autocomplete="off">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Question</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" name="question"></textarea>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-6">
                            <input id="correctAnswer" name="correctAnswer" type="text" class="form-control" placeholder="Correct Answer" autocomplete="off">
                        </div>
                        <div class="col-6">
                            <input name="answer2" type="text" class="form-control" placeholder="Answer" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-6">
                            <input name="answer3" type="text" class="form-control" placeholder="Answer" autocomplete="off">
                        </div>
                        <div class="col-6">
                            <input name="answer4" type="text" class="form-control" placeholder="Answer" autocomplete="off">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-secondary submit-button" name="button">Submit Question</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-3 col-sm-1">
        <p> </p>
    </div>
</div>

<%- include("footer") -%>
